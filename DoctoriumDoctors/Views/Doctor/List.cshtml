@model DoctorsListViewModel

<h1>@Model.CurrentSpeciality</h1>



<div class="row row-cols-1 row-cols-md-4 g-4">
    @foreach (var doctor in @Model.Doctors)
    {
        <div class="col">
            <div class="card h-100">
                <img src="@doctor.ImageUrl" class="card-img-top" />
                <div class="card-body">
                    <h5 class="card-title">
                        @doctor.LastName @doctor.MiddleName @doctor.FirstName
                    </h5>
                    <h6 class="card-subtitle mb-2 text-muted">@doctor.Speciality.Title</h6>
                    <p class="card-text">@doctor.Speciality.Description</p>
                </div>

                <div class="card-footer">
                    <a href="#" class="btn btn-primary">Обратиться</a>
                </div>

            </div>
        </div>
    }
</div>
